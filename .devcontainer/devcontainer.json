{
  "build": {
    "dockerfile": "./Dockerfile",
    "args": {
      "NODE_VERSION": "22"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "editorconfig.editorconfig",
        "github.copilot",
        "github.copilot-chat",
        "jacobcassidy.css-nesting-syntax-highlighting",
        "dbaeumer.vscode-eslint",
        "stylelint.vscode-stylelint",
        "fabiospampinato.vscode-open-in-github",
        "redhat.vscode-yaml"
      ]
