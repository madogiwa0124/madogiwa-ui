{
  "name": "madogiwa-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "pnpm css build && pnpm vue build",
    "build:docs": "pnpm css build:docs --output-dir=../../docs/storybook/css; pnpm vue build:demo; mkdir -p ./docs/demo/vue && rsync -a --delete ./packages/vue/dist/demo/ ./docs/demo/vue/",
    "setup": "playwright install chromium --with-deps",
    "css": "pnpm --filter @madogiwa-ui/css",
    "vue": "pnpm --filter @madogiwa-ui/vue",
    "lint": "eslint --cache",
    "lint:css": "stylelint \"**/*.css\" --cache --cache-location node_modules/.cache/stylelint/ --ignore-path .stylelintignore",
    "lint:type-check": "tsc --noEmit && pnpm vue type-check"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@stylistic/stylelint-plugin": "^4.0.0",
    "@tsconfig/strictest": "^2.0.8",
    "eslint": "^9.39.2",
    "eslint-plugin-unicorn": "62.0.0",
    "eslint-plugin-vue": "^10.6.2",
    "globals": "^17.0.0",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-plugin-use-baseline": "^1.1.5",
    "typescript": "catalog:",
    "typescript-eslint": "^8.52.0",
    "vue-eslint-parser": "^10.2.0"
  },
  "packageManager": "pnpm@10.27.0"
}
